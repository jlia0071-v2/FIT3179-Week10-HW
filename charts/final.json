{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "title": "Tourists vs Rainfall by State (2023)",
  "data": {
    "url": "data/tourists_temperature_rain.csv"
  },
  "params": [
    {
      "name": "Temperature_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 25,
        "step": 1,
        "name": "Minimum Temperature: "
      }
    },
    {
      "name": "State_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Victoria",
          "New South Wales",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania"
        ],
        "labels": [
          "Show All",
          "Victoria",
          "New South Wales",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania"
        ],
        "name": "State Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.TemperatureMean > Temperature_Above"},
    {
      "filter": "State_Selection == null || datum.State == State_Selection"
    }
  ],

  "encoding": {
    "x": {
      "field": "RainProportion",
      "type": "quantitative",
      "title": "Rain Proportion (%)"
    },
    "y": {
      "field": "Tourists",
      "type": "quantitative",
      "title": "Tourists (000's)"
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "TemperatureMean",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 20, 25],
            "range": [50, 100, 200, 300]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "domain": [
              "Victoria",
              "New South Wales",
              "Queensland",
              "South Australia",
              "Western Australia",
              "Tasmania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Month", "type": "nominal"},
          {"field": "Tourists", "type": "quantitative", "format": ".0f"},
          {"field": "RainProportion", "type": "quantitative", "format": ".2f"},
          {"field": "TemperatureMean", "type": "quantitative", "format": ".2f"}
        ]
      }
    },


  {
  "mark": {
    "type": "text",
    "align": "left",
    "baseline": "middle",
    "dx": 10,   
    "dy": -10,  
    "color": "grey",
    "fontSize": 12,
    "fontStyle": "italic"
  },
  "transform": [
    {"filter": "datum['State'] == 'New South Wales' && datum['Month'] == 'Dec-23'"}
  ],
  "encoding": {
    "x": {"field": "RainProportion", "type": "quantitative"},
    "y": {"field": "Tourists", "type": "quantitative"},
    "text": {
      "value": "Peak Tourism in NSW"
    }
    }
  },

    {
      "mark": "rule",
      "encoding": {
        "x": {"field": "RainProportion", "type": "quantitative"},
        "x2": {"value": 175},
        "y": {"field": "Tourists", "type": "quantitative"},
        "y2": {"value": 2},
        "color": {"value": "gray"},
        "strokeWidth": {"value": 2},
        "opacity": {
          "condition": {
            "test": "datum['State'] == 'New South Wales' && datum['Month'] == 'Dec-23'",
            "value": 1
          },
          "value": 0
        }
      }
    }



  ]
}


